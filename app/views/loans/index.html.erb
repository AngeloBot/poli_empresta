<p id="notice"><%= notice %></p>

<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>Borrower</th>
      <th>Owner</th>
      <th>Start</th>
      <th>End</th>
      <th>Accepted</th>
      <th>Returned</th>
      <th>Tool quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.borrower_id %></td>
        <td><%= loan.owner_id %></td>
        <td><%= loan.start %></td>
        <td><%= loan.end %></td>
        <td><%= loan.accepted %></td>
        <td><%= loan.returned %></td>
        <td><%= loan.tool_quantity %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

