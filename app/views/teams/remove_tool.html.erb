<p id="notice"><%= notice %></p>
<h1>Tools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
        <tr>
          <td><%= tool.name %></td>
          <td><%= tool.photo %></td>
          <td><%= tool.team_id %></td>
          <td><%= link_to 'Remover', tool, method: :delete, data: { confirm: 'Remover membro ' + tool.name + '?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Voltar', edit_team_path(@team) %>
