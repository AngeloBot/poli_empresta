<p id="notice"><%= notice %></p>

<h1>Tools for <%= @student.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Description</th>
      <th>Price</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.name %></td>
        <td><%= tool.year %></td>
        <td><%= tool.description %></td>
        <td><%= tool.price %></td>
        <td><%#= tool.student_id %></td>
        <td><%#= tool.student.given_name %><%#= tool.student.family_name %></td>
        <td><%= tool.student.name %></td>

        <% if !@student.tools.empty? %>
          <td><%= link_to 'Show', [ @student, tool ] %></td>
          <td><%= link_to 'Edit', edit_student_tool_path( @student, tool ) %></td>
          <td><%= link_to 'Destroy', [ @student, tool ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <br>  
        <% else %>
          <p><%= @student.given_name %> hasn't won any awards yet.</p>
        <% end %>

        <td><%#= link_to 'Show', tool %></td>
        <td><%#= link_to 'Edit', edit_tool_path(tool) %></td>
        <td><%#= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Tool', new_tool_path %>
<%= link_to 'New Tool', new_student_tool_path(@student) %>
<%= link_to 'Back', @student %>
