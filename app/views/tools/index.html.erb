<p id="notice"><%= notice %></p>

<h1>Ferramentas da equipe <%= @team.name %></h1>

<% unless @team.tools.empty? %>
<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Description</th>
      <th>Name</th>
      <th>Photo</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.quantity %></td>
        <td><%= tool.description %></td>
        <td><%= tool.name %></td>
        <td><%= tool.photo %></td>
        <td><%= tool.team.name %></td>
        <td><%= link_to 'Show', [@team, tool] %></td>
        <td><%= link_to 'Edit', edit_team_tool_path(@team, tool) %></td>
        <td><%= link_to 'Destroy', [@team, tool], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>
  <p>
    <%= @team.name %> n√£o possui ferramentas.
  </p>
<% end %>

<%= link_to 'New Tool', new_team_tool_path(@team) %>
