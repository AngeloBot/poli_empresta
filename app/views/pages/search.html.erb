<%= form_tag search_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= link_to 'Back', pages_homepage_path %>

<h1>Teams</h1>

<% unless @teams.empty? %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.description %></td>
        <td><%= team.photo %></td>
        <td><%= link_to 'Show', team %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  Nenhuma equipe encontrada.
<% end %>

<br>

<h2>Tools</h2>

<% unless @tools.empty? %>
  <table>
    <thead>
      <tr>
        <th>Quantity</th>
        <th>Description</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Team</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @tools.each do |tool| %>
          <tr>
            <td><%= tool.quantity %></td>
            <td><%= tool.description %></td>
            <td><%= tool.name %></td>
            <td><%= tool.photo %></td>
            <td><%= tool.team_id %></td>
            <td><%= link_to 'Show', [@team,tool] %></td>
            <td><%= link_to 'Edit', edit_team_tool_path(Team.find(tool.team_id), tool) %></td>
            <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
<% else %>
  Nenhuma ferramenta encontrada.
<% end %>

<br>
