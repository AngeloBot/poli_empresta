    <%= form.label :accepted %>
    <%= form.check_box :accepted, id: :loan_accepted %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.date_select :start, id: :loan_start %>
  </div>

  <div class="field">
    <%= form.label :end %>
