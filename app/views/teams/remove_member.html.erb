<p id="notice"><%= notice %></p>
<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Admin</th>
      <th>Name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Photo</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <% unless student.admin %>
        <tr>
          <td><%= student.admin %></td>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.password_digest %></td>
          <td><%= student.photo %></td>
          <td><%= student.team_id %></td>
          <td><%= link_to 'Remover', student, method: :delete, data: { confirm: 'Remover membro ' + student.name + '?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Voltar', edit_team_path(@team) %>
